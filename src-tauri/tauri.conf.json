{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Wingman",
  "version": "0.7.2",
  "identifier": "com.wingman.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": false,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Wingman",
        "width": 1024,
        "height": 650,
        "minWidth": 400,
        "minHeight": 200,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "center": true,
        "skipTaskbar": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: asset: https:; font-src 'self' data:; connect-src 'self' https://yhpetdqcmqpfwhdtbhat.supabase.co https://api.github.com https://github.com https://api.anthropic.com; media-src 'self' data: blob:; object-src 'none'; base-uri 'self'; frame-ancestors 'none'; form-action 'self'"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/csteamengine/wingman/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUwOTM2MTQ2NjIzMzU3ODgKUldTSVZ6TmlSbUdUVUlCSkRQZTd1enVvejY2QTlXUVVjU0xpOGNXb2E4REhDZlp5R3FMTGpITWUK",
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "category": "Utility",
    "shortDescription": "Cross-platform text composition tool",
    "longDescription": "Wingman is a lightweight, cross-platform text composition tool that provides a floating overlay for quick text editing with clipboard integration.",
    "copyright": "Copyright (c) 2024 Wingman Contributors",
    "license": "MIT",
    "licenseFile": "../LICENSE",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "entitlements.plist",
      "exceptionDomain": "",
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": null
    },
    "windows": {
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": []
      },
      "rpm": {
        "depends": []
      }
    }
  }
}
